{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
		"experimentalDecorators": true,
		"lib": [
			"ESNext"
		],
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "ES2021",
		"outDir": "lib",
		"strictNullChecks": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*.ts",
		"__tests__/**/*",
		"serverless.ts"
	],
	"exclude": [
		"node_modules/**/*",
		".serverless/**/*",
		".webpack/**/*",
		"_warmup/**/*",
		".vscode/**/*",
		"./coverage"
	],
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	}
}