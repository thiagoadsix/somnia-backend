		"@typescript-eslint/eslint-plugin": "~5.56",
		"@typescript-eslint/parser": "~5.56",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "~8.36",
		"eslint-config-prettier": "~8.8",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jest": "~27.2",
